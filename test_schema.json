{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["product", "metadata"],
  "properties": {
    "product": {
      "type": "object",
      "required": ["id", "name", "price"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "price": { "type": "number" }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created_at": { "type": "string" },
        "updated_by": { "type": "string" }
      }
    }
  }
}
